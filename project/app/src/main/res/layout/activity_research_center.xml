<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_research_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF0033"
    tools:context="com.example.adriansarstedt.words2.ResearchCenter">

    <RelativeLayout
        android:id="@+id/HeaderBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#CC0033"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/HomeButton"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/home_icon"
            android:onClick="ReturnHome"/>

        <View
            android:id="@+id/progressBarHolder"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/HomeButton"
            android:layout_marginLeft="10dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/progressbar_outer"/>

        <View
            android:id="@+id/progressBar"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/progressbar_inner"/>

        <TextView
            android:id="@+id/DiscoveredCountDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

    </RelativeLayout>

    <GridView
        android:id="@+id/MainGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_below="@id/HeaderBar"
        android:paddingTop="10dp"
        android:paddingBottom="170dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:clipToPadding="false"/>

    <RelativeLayout
        android:id="@+id/BottomBar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#CCCC0033"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/ResearchText"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="12dp"
            android:background="@drawable/letter_background"
            android:textSize="80sp"
            android:textAlignment="center"
            android:textColor="#ddc08e63"
            />
        <ImageButton
            android:id="@+id/LeftButton"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:layout_toLeftOf="@id/ResearchText"
            android:layout_centerVertical="true"
            android:background="@drawable/left_icon"/>
        <ImageButton
            android:id="@+id/RightButton"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:layout_toRightOf="@id/ResearchText"
            android:layout_centerVertical="true"
            android:background="@drawable/right_icon"/>

    </RelativeLayout>

</RelativeLayout>
