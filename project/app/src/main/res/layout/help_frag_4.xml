<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help_fragment_background_center"
    android:gravity="center_horizontal"
    android:textAlignment="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/e1f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:textColor="#ffffff"
        android:text="THE AIM OF THE GAME IS TO DISCOVER ALL SPECIES"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <View
            android:id="@+id/progressBarHolder"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/progressbar_outer"/>

        <View
            android:id="@+id/progressBar"
            android:layout_height="match_parent"
            android:layout_width="0px"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:background="@drawable/progressbar_inner"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/e2f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:textColor="#ffffff"
        android:text="4/200"/>
    <TextView
        android:id="@+id/e3f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#ffffff"
        android:text="SPECIES DISCOVERED"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

</LinearLayout>